{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "zizmor's configuration",
  "description": "Configuration file for zizmor, a static analysis tool for GitHub Actions.\n\nSee: https://docs.zizmor.sh/configuration/",
  "type": "object",
  "properties": {
    "rules": {
      "$ref": "#/definitions/RulesConfig"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "BaseRuleConfig": {
      "description": "Base configuration for all audit rules.",
      "type": "object",
      "properties": {
        "disable": {
          "type": "boolean",
          "default": false
        },
        "ignore": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/WorkflowRule"
          }
        }
      },
      "additionalProperties": false
    },
    "DependabotCooldownConfig": {
      "type": "object",
      "properties": {
        "days": {
          "description": "The minimum acceptable `default-days` value for Dependabot's cooldown setting.\n\nSettings beneath this value will produce findings.",
          "type": "integer",
          "format": "uint",
          "default": 7,
          "minimum": 1
        }
      },
      "additionalProperties": false
    },
    "DependabotCooldownRuleConfig": {
      "description": "Configuration for the `dependabot-cooldown` audit.",
      "type": "object",
      "properties": {
        "config": {
          "$ref": "#/definitions/DependabotCooldownConfig"
        },
        "disable": {
          "type": "boolean",
          "default": false
        },
        "ignore": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/WorkflowRule"
          }
        }
      },
      "additionalProperties": false
    },
    "ForbiddenUsesAllowConfig": {
      "description": "Configuration for the `forbidden-uses` audit.",
      "type": "object",
      "properties": {
        "allow": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RepositoryUsesPattern"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "allow"
      ]
    },
    "ForbiddenUsesConfig": {
      "description": "Configuration for the `forbidden-uses` audit.",
      "anyOf": [
        {
          "$ref": "#/definitions/ForbiddenUsesAllowConfig"
        },
        {
          "$ref": "#/definitions/ForbiddenUsesDenyConfig"
        }
      ]
    },
    "ForbiddenUsesDenyConfig": {
      "description": "Configuration for the `forbidden-uses` audit.",
      "type": "object",
      "properties": {
        "deny": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RepositoryUsesPattern"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "deny"
      ]
    },
    "ForbiddenUsesRuleConfig": {
      "description": "Configuration for the `forbidden-uses` audit.",
      "type": "object",
      "properties": {
        "config": {
          "anyOf": [
            {
              "$ref": "#/definitions/ForbiddenUsesConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "disable": {
          "type": "boolean",
          "default": false
        },
        "ignore": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/WorkflowRule"
          }
        }
      },
      "additionalProperties": false
    },
    "RepositoryUsesPattern": {
      "title": "Represents a pattern for matching repository `uses` references.",
      "description": "These patterns are ordered by specificity; more specific patterns\nshould be listed first.",
      "type": "string"
    },
    "RulesConfig": {
      "type": "object",
      "properties": {
        "anonymous-definition": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "archived-uses": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "artipacked": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "bot-conditions": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "cache-poisoning": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "concurrency-limits": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "dangerous-triggers": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "dependabot-cooldown": {
          "anyOf": [
            {
              "$ref": "#/definitions/DependabotCooldownRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "dependabot-execution": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "excessive-permissions": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "forbidden-uses": {
          "anyOf": [
            {
              "$ref": "#/definitions/ForbiddenUsesRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "github-env": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "hardcoded-container-credentials": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "impostor-commit": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "insecure-commands": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "known-vulnerable-actions": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "obfuscation": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "overprovisioned-secrets": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "ref-confusion": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "ref-version-mismatch": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "secrets-inherit": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "self-hosted-runner": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "stale-action-refs": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "template-injection": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "undocumented-permissions": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "unpinned-images": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "unpinned-uses": {
          "anyOf": [
            {
              "$ref": "#/definitions/UnpinnedUsesRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "unredacted-secrets": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "unsound-condition": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "unsound-contains": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "use-trusted-publishing": {
          "anyOf": [
            {
              "$ref": "#/definitions/BaseRuleConfig"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "UnpinnedUsesConfig": {
      "description": "Configuration for the `unpinned-uses` audit.",
      "type": "object",
      "properties": {
        "policies": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/UsesPolicy"
          }
        }
      },
      "additionalProperties": false
    },
    "UnpinnedUsesRuleConfig": {
      "description": "Configuration for the `unpinned-uses` audit.",
      "type": "object",
      "properties": {
        "config": {
          "anyOf": [
            {
              "$ref": "#/definitions/UnpinnedUsesConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "disable": {
          "type": "boolean",
          "default": false
        },
        "ignore": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/WorkflowRule"
          }
        }
      },
      "additionalProperties": false
    },
    "UsesPolicy": {
      "description": "A singular policy for a `uses:` reference.",
      "oneOf": [
        {
          "description": "No policy; all `uses:` references are allowed, even unpinned ones.",
          "type": "string",
          "const": "any"
        },
        {
          "description": "`uses:` references must be pinned to a tag, branch, or hash ref.",
          "type": "string",
          "const": "ref-pin"
        },
        {
          "description": "`uses:` references must be pinned to a hash ref.",
          "type": "string",
          "const": "hash-pin"
        }
      ]
    },
    "WorkflowRule": {
      "title": "A workflow ignore rule.",
      "description": "Ignore rules are specified as `filename.yml:line:col`, where\n`line` and `col` are optional 1-based indices. If `line` is\nomitted, `col` must also be omitted.",
      "type": "string",
      "pattern": "^[^:]+\\.ya?ml(:[1-9][0-9]*)?(:[1-9][0-9]*)?$"
    }
  }
}
